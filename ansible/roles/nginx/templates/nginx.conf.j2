user www-data;
worker_processes auto;
pid /run/nginx.pid;

events {
    worker_connections 768;
    # multi_accept on;
}

http {
    server {
        listen 80 default_server;
        listen [::]:80 default_server;

        server_name localhost;

        root /ansible/html;  
        index index.html;

        location / {
            try_files $uri $uri/ =404;
        }
    }

    # include /etc/nginx/conf.d/*.conf;
    # include /etc/nginx/sites-enabled/*;
}
